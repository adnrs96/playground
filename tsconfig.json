{
  "compilerOptions": {
    "target": "es5", 
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "jest", "node"],
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/views/*", "src/app/*"],
      "@editor/*": ["src/editor/core/views/*", "src/editor/core/*"],
      "@editor-plugin/*": ["src/editor/plugin-*/index.ts"],
      "@internal/*": ["src/internal/*"],
      "&/*": ["src/app/types/*", "src/editor/core/types/*", "src/internal/types/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts",
    "src/editor/core/plugins/storyscript.lang.js"
  ],
  "exclude": ["node_modules"]
}